<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="4dp"
    android:background="@drawable/pwd_dialog_bg">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Setting"
        android:textSize="22sp"
        android:textColor="#46364B"/>
    <com.hynson.gallery.view.EditTextWithClear
        android:id="@+id/pwd_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="API key"
        android:textSize="18sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:ems="1"
            android:text="p&#8194;e&#8194;r&#8194;p&#8194;a&#8194;g&#8194;e&#8194;"
            android:textSize="18sp"
            android:textStyle="italic"/>
        <NumberPicker
            android:id="@+id/change_perpage_np"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:solidColor="@color/cardview_light_background"
            android:background="#ff9696"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:ems="1"
            android:text="c&#8194;a&#8194;t&#8194;e&#8194;g&#8194;o&#8194;r&#8194;y&#8194;"
            android:textSize="18sp"
            android:textStyle="italic"/>
        <NumberPicker
            android:id="@+id/change_category_np"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:solidColor="@color/cardview_light_background"
            android:background="#009BDB"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:ems="1"
            android:text="t&#8194;y&#8194;p&#8194;e&#8194;"
            android:textSize="18sp"
            android:textStyle="italic"/>
        <NumberPicker
            android:id="@+id/change_type_np"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:solidColor="@color/cardview_light_background"
            android:background="#159C77"/>
